{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "rootDir": "src",
    "outDir": ".",
    "allowJs": false,
    "resolveJsonModule": false,
    "noEmitOnError": true
  },
  "include": [
    "src/scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
